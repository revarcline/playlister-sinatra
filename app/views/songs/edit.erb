<h1>Edit <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name</label><br>
  <input id="name" type="text" name="song[name]" value="<%= @song.name %>">
  <br><br>

  <label for="artist_name">Artist Name</label><br>
  <input id="artist_name"
         type="text"
         name="artist[name]"
         value="<%= @song.artist.name %>">
  <br><br>

  <h3>Genres: </h3>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>"
           type="checkbox"
           name="genres[]"
           value="<%= genre.id %>"
           <%= 'checked' if @song.genres.include?(genre) %>>
    <label for="<%= genre.name %>"><%= genre.name %></label><br>
  <% end %>
  <br>

  <input type="submit" value="Save">
</form>
